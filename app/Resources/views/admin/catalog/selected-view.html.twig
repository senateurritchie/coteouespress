{% form_theme form 'bootstrap_3_layout.html.twig' %}

 <style>

    @media (min-width: 992px){
        .modal-lg {
            width: 1080px;
        }
    }

</style>

{% if use_modal is defined %}
    <div class="modal fade modal-form" id="modal-insert" role="dialog" aria-labelledby="insertion du catalogue" aria-describedby="">
{% else %}
    <div class="modal fade modal-form" id="modal-update" data-id="{{ data.id }}" role="dialog" aria-labelledby="modification du catalogue" aria-describedby="">
{% endif %}

    <div class="modal-dialog"  role="document">
        <div class="modal-content" >
            <div class="modal-header bg-red">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
                <h4 class="modal-title">
                    {% if use_modal is defined and use_modal == 'add' %}
                       Ajouter un catalogue
                    {% else %}
                        Modification...
                    {% endif %}
                </h4>
            </div>
            
            {{ form_start(form) }}
                {% set complement = (use_modal is defined) ? '' : '-up' %}

                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                             {{ form_row(form.catalog) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_row(form.year) }}
                        </div>
                    </div>
                   
                    
                    {{ form_row(form.published) }}
                    {{ form_row(form.file) }}
                </div>

                <div class="modal-footer">

                    <div class="pull-left">
                        <button type="reset" class="btn btn-default" >
                            Annuler
                        </button>

                        {% if use_modal is not defined %}

                            <button data-title="supprimer" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                                <i class="fa fa-trash"></i> Supprimer
                            </button>

                        {% endif %}
                    </div>
                    
                    <button class="btn btn-danger pull-right">
                        <i class="fa fa-save"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form,{'producer':false}) }}
        </div>
    </div>


</div>

