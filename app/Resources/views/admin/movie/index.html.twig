    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
    
    <script type="text/javascript" src="{{ asset('lib/venobox/venobox.min.js') }}"></script>

	<script src="{{ asset('js/admin/manager.js') }}"></script>
