							<i class="fa {{ is_search_opened ? 'fa-minus' : 'fa-plus' }}"></i>
                		</button>
			  		</div>
            	</div>

    			{{ form_start(form_search,{"method":"GET"}) }}
	    			<div class="box-body">
	                    <div class="row">

	                        <div class="col-md-4 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.name, {"attr":{"class":"form-control-sm","placeholder":'Nom du programme',"autocomplete":"off"}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.category, {"attr":{"class":"form-control-sm custom-select"}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.genre, {"attr":{"class":"form-control-sm custom-select","placeholder":'Genre'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.country, {"attr":{"class":"form-control-sm custom-select","placeholder":'Pays'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.language, {"attr":{"class":"form-control-sm custom-select","placeholder":'Langue'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                        	{{ form_row(form_search.year, {"attr":{"class":"form-control-sm","min":2000},"placeholder":'debut de production'}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                        	{{ form_row(form_search.year_end, {"attr":{"class":"form-control-sm","min":2000},"placeholder":'fin de production'}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.mention, {"attr":{"class":"form-control-sm custom-select","placeholder":'Définition'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.producer, {"attr":{"class":"form-control-sm custom-select","placeholder":'Producteur'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.director, {"attr":{"class":"form-control-sm custom-select","placeholder":'Réalisateur'}}) }}
	                        </div>
	                           
	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                            {{ form_row(form_search.actor, {"attr":{"class":"form-control-sm custom-select","placeholder":'Acteur'}}) }}
	                        </div>

	                        <div class="col-md-2 col-sm-6 col-xs-12">
	                           
	                        </div>
	                    </div>   

	                    <div class="row">
	                    	<div class="col-md-2 col-sm-6 col-xs-12">

	                    		 <div class="form-group">
	                                {{ form_widget(form_search.in_theather, {"attr":{"class":"form-control-sm"},"label":"programmes à l'affiche"}) }}
	                            </div>

	                            <div class="form-group">
	                                {{ form_widget(form_search.has_exclusivity, {"attr":{"class":"form-control-sm"},"label":"programmes plébicités"}) }}
	                            </div>

	                             <div class="form-group">
	                                {{ form_widget(form_search.is_published, {"attr":{"class":"form-control-sm"},"label":"programmes publiés"}) }}
	                            </div>
	                        </div>
	                    </div>
	    			</div>

	    			<div class="box-footer">

	    				<input type="hidden" name="search_on" value="1" />

	    				{% if is_search_opened %}
                            <a  href="{{ path('admin_movie_index') }}"  class="btn btn-danger">
                                <i class="fa fa-trash"></i>  Vider les champs
                            </a>
                        {% endif %}

	                    {{ form_widget(form_search.bntSearch,{'attr':{'class':'btn-primary'}}) }}
	    			</div>
	    		{{ form_end(form_search) }}

    		</div>

