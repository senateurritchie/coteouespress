                                                <i class="fa fa-times"></i>
                                            </a>
                                        </div>
                                        
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="form-group">
                               
                                {{ form_errors(form.languages) }}
                                {{ form_widget(form.languages) }}

