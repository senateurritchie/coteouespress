                    {{ form_label(form.coverImg) }}
                    {{ form_errors(form.coverImg) }}
                    

                    <div style="text-align:center " >
                        <div style="display:inline-block;position:relative;text-align:center" class="dropper">
                            {{ form_widget(form.coverImg) }}
                            
                            <div class="dropper-target" id="vignette-cover" 

                                {% if form.vars.value.coverImg %}
                                    style="background-image:url({{ asset('upload/public/'~form.vars.value.coverImg) }})" 
