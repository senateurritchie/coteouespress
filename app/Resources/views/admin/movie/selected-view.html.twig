{% form_theme form 'bootstrap_3_layout.html.twig' %}

 <style>
    #vignette-cover{
        height: 360px;
        width: 920px;
        background-color: #f6f6f6;
        overflow: hidden;
        background: url("{{ asset('/img/vignette-cover-admin.png') }}") no-repeat left top / cover;
    }

    #vignette-portrait{
        height: 360px;
        width: 270px;
        background-color: #f6f6f6;
        overflow: hidden;
        background: url("{{ asset('/img/vignette.png') }}") no-repeat left top / cover;
    }

    #vignette-landscape{
        height: 360px;
        width: 640px;
        background-color: #f6f6f6;
        overflow: hidden;
        background: url("{{ asset('/img/vignette-landscape.png') }}") no-repeat left top / cover;
    }

    .modal-form .has-collection .form-group > div{
        margin-bottom: 5px;
    }

    .modal-form .scene-dropper{
        min-height: 360px;
        border: 1px dashed #D0D8DB;
        border-radius: 5px;
        width: 100%;
        padding: 10px;
        text-align: center;
    }

    

    .modal-form .local_files_view{
        display: flex;
        -webkit-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
        padding:100px;
        align-items: center;
        justify-content: center;
    }
   
    .modal-form .local_files_view h3{
        line-height: 1.4;
    }
    .modal-form .local_files_view svg{
            width: 10.3125rem
    }

    .scene-dropper.dropped .local_files_view{
        display: none;
    }

    @media (min-width: 992px){
        .modal-lg {
            width: 1080px;
        }
    }

    .old-value{
        border-radius:20px;
        margin-right:3px;
        padding:8px;
        margin-bottom: 5px;
    }

    
    .modal-form .scene-dropper >  .scene-thumbnail{
        margin-right: 10px;
        margin-bottom: 10px;
         position:relative;
        display: inline-block;
    }

    .modal-form .scene-dropper .scene-thumbnail a{
        color:white;
        position:absolute;
        right:10px;
        top:10px;
    }

    .modal-form .scene-dropper .progress{
        position:absolute;
        bottom: 5px;
        left: 5px;
        right: 5px;
        margin-bottom: 0;
    }

    #modal-insert .scene-dropper .progress{
        display: none;
    }

</style>

{% if use_modal is defined %}
    <div class="modal fade modal-form" id="modal-insert" role="dialog" aria-labelledby="modification du programme" aria-describedby="">
{% else %}
    <div class="modal fade modal-form" id="modal-update" data-id="{{ data.id }}" role="dialog" aria-labelledby="modification du programme" aria-describedby="">
{% endif %}

    <div class="modal-dialog modal-lg"  role="document">
        <div class="modal-content" >
            <div class="modal-header bg-red">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">
                    {% if use_modal is defined and use_modal == 'add' %}
                       Ajouter un programme
                    {% else %}
                        Modification...
                    {% endif %}
                    
                </h4>

               
            </div>
            
            {{ form_start(form) }}
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.originalName) }}
                        </div>

                         <div class="col-md-4">
                            {{ form_row(form.category) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.originalLanguage) }}
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.format) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.mention) }}
                                </div>
                            </div>
                           
                        </div>

                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.year_start) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_row(form.year_end) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                           {{ form_row(form.episode1) }}
                        </div>

                        <div class="col-md-4">
                           {{ form_row(form.episode2) }}
                        </div>

                        <div class="col-md-4">
                            {{ form_row(form.episode3) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.trailer) }}
                        </div>
                        <div class="col-md-4">

                        </div>

                        <div class="col-md-4">

                        </div>
                    </div>

                   
                    {{ form_row(form.synopsis) }}

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.reward) }}
                        </div>

                        <div class="col-md-4">
                           {{ form_row(form.award) }}                        
                        </div>

                         <div class="col-md-4">
                           {{ form_row(form.audience) }}                        
                        </div>
                    </div>
                    
                    <div class="row">

                        <div class="col-md-4 has-collection">

                            {{ form_label(form.languages) }}

