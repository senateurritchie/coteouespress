{% extends 'admin/base.html.twig' %}

{% block header_content %}
	Mon profil <small>affichage des informations du profil en cours</small>
{% endblock %}

{% block body_content %}
	<section class="content">

    	<div class="row">
        	<div class="col-md-3">
          		<!-- Profile Image -->
          		<div class="box box-primary">
            		<div class="box-body box-profile">
              			<img class="profile-user-img img-responsive img-circle" src="http://www.ampleadmin.wrappixel.com/ampleadmin-html/plugins/images/users/varun.jpg" alt="User profile picture">

              			<h3 class="profile-username text-center">{{ app.user.username|lower|title }}</h3>

              			<p class="text-muted text-center">
			              	{% if is_granted('ROLE_SUPER_ADMIN') %}
			                    Super administrateur
			                {% elseif is_granted('ROLE_ADMIN') %}
			                    Administrateur
			                {% elseif is_granted('ROLE_CATALOG') %}
			                    Catalogue
			                {% elseif is_granted('ROLE_TRANSLATOR') %}
			                    Traducteur
			                {% elseif is_granted('ROLE_SALER') %}
			                    Commercial
			                {% elseif is_granted('ROLE_PRODUCER') %}
			                    Producteur
			                {% elseif is_granted('ROLE_ACTOR') %}
			                    Acteur
			                {% elseif is_granted('ROLE_CREATOR') %}
			                    Créateur
			                {% elseif is_granted('ROLE_DIRECTOR') %}
			                    Réalisateur
			                {% elseif is_granted('ROLE_SUBSCRIBER') %}
			                    Abonné
			                {% endif %} 
		              	</p>
            		</div>
          		</div>

	          	<!-- About Me Box -->
	          	<div class="box box-primary">
		            <div class="box-header with-border">
		              <h3 class="box-title">A propos</h3>
		            </div>
		            <!-- /.box-header -->
		            <div class="box-body">
			            <strong><i class="fa fa-file-text-o margin-r-5"></i> Moi</strong>

			            <p class="text-muted">
			                B.S. in Computer Science from the University of Tennessee at Knoxville
			            </p>

			            <hr>

		              	<strong><i class="fa fa-map-marker margin-r-5"></i> Pays</strong>

		              	<p class="text-muted">Malibu, California</p>
		            </div>
	        	</div>
        	</div>
        
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#privileges" data-toggle="tab">Mes privilèges</a></li>
                        <li><a href="#settings" data-toggle="tab">Parametre du compte</a></li>
                    </ul>
                    
                    <div class="tab-content">
                        <div class="active tab-pane" id="privileges">
                       
                        </div>
                       

                        <div class="tab-pane" id="settings">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Nom & Prénoms</label>

                                    <div class="col-sm-10">
                                        <input class="form-control" id="inputName" placeholder="Name" type="email">
                                    </div>
                                </div>
                  
                                <div class="form-group">
                                    <label for="inputEmail" class="col-sm-2 control-label">Email</label>

                                    <div class="col-sm-10">
                                        <input class="form-control" id="inputEmail" placeholder="Email" type="email">
                                    </div>
                                </div>
                
                  
                                <div class="form-group">
                                    <label for="inputExperience" class="col-sm-2 control-label">
                                        A propos
                                    </label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control" id="inputExperience" placeholder="Dites quelques choses a propos de vous."></textarea>
                                    </div>
                                </div>
                  
                                <div class="form-group">
                                    <label for="inputSkills" class="col-sm-2 control-label">Skills</label>

                                    <div class="col-sm-10">
                                        <input class="form-control" id="inputSkills" placeholder="Skills" type="text">
                                    </div>
                                </div>
                  
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                  
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}