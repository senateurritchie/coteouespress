{% extends 'admin/base.html.twig' %}


{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block header_content %}
	Les Rôles <small>gestion des rôles et privilèges de la palateforme</small>
{% endblock %}

{% block body_content %}

	<div class="row">
    	<div class="col-xs-12 col-md-8">
        	<div class="box box-primary">
            	<div class="box-header">
              		<h3 class="box-title">Tout les rôles et privilèges</h3>
            	</div>
            
            	<!-- /.box-header -->
            	<div class="box-body table-responsive no-padding">
              		<table class="table table-hover">
		                <tbody>
		                	<tr>
		                 		<th>Nom</th>
		                 		<th>Reférence</th>
		                  		<th>Description</th>
		                  		<th>Nature</th>
		                  		<th>Ajouté le</th>
		                	</tr>
	                		
	                		{% for item in roles %}
		                		<tr class="user-item" data-user-profil="{{ {}|json_encode|e('html_attr') }}">
		                  			<td>{{ item.name|lower|title }}</td>
		                  			<td><span class="label label-primary">{{ item.label }}</span></td>
		                  			<td>{{ item.description }}</td>
		                  			<td>
		                  				<span class="label label-primary">
			                  				{{ item.type }}
			                  			</span>
		                  			</td>

		                  			<td>
		                  				{{item.createAt|date("d M Y à H:m")}}
		                  			</td>
		                		</tr>
		                	{% endfor %}
	               
	              		</tbody>
              		</table>
            	</div>
            </div>
        </div>

        <div class="col-md-4 col-xs-12">

        	<div class="box box-primary">
	            <div class="box-header with-border">
	            	<h3 class="box-title">Créez un role</h3>
	            </div>
	            
	            {{ form_start(form) }}
	            	<div class="box-body">
						
						{% for notice in app.flashes('notice-success') %}
                            <div class="alert alert-info alert-dismissible">
				                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
				                <h4><i class="icon fa fa-check"></i> Félicitation!</h4>
				                Le role à bien été enregistré avec succès.
				            </div>
                        {% endfor %}

                        {% for notice in app.flashes('notice-error') %}
                            <div class="alert alert-danger alert-dismissible">
				                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
				                <h4><i class="icon fa fa-check"></i> Attention!</h4>
				                {{ notice }}
				            </div>
                        {% endfor %}


	            		{{ form_row(form.name) }}
	            		{{ form_row(form.label) }}
	            		{{ form_row(form.type) }}
	            		{{ form_row(form.description) }}

	              	</div>

	              	<div class="box-footer">
	                	<button type="reset" class="btn btn-default">Annuler</button>

	                	<button type="submit" class="btn btn-danger pull-right">
	                		<i class="fa fa-save"></i> Enregistrer
	                	</button>
	              	</div>
              	{{ form_end(form) }}
	        </div>
        </div>
    </div>
      
	
{% endblock %}