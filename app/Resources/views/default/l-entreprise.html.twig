    <script>
        $(document).ready(function($){

            let mainMenu = $("#master-menu");
            var win = $(window);

            win.on({
                scroll:function(e){

                    let pos = $(this).scrollTop();
                    if(pos >= 230){
                        mainMenu.addClass('active');
                    }
                    else if(pos <= 120){
                        mainMenu.removeClass('active');
                    }
                }
            });



            $(".has-carousel").each(function(i,el){
                let obj = $(el);
                let owl = obj.find(".owl-carousel");

                obj.find(".slide-nav.nav-n, .slide-nav.nav-p").on({
                    click:function(e){
                        e.preventDefault();
                        if($(this).hasClass('nav-n')){
                            owl.trigger('next.owl.carousel');
                        }
                        else{
                            owl.trigger('prev.owl.carousel');
                        }
                    }
                });

                let opts = {
                    loop:true,
                    items:4,
                    autoplay:true,
                    autoplayTimeout:2000
                };

                owl.owlCarousel(opts);
            });

            $(".anchor").on({
                click:function(e){
                    e.preventDefault();

                    let obj = $(this);
                    let id = obj.attr("href");

                    $("html, body").animate({ scrollTop: $(id).offset().top-100 }, 1000);
                }
            });

            function genrePrintHook(){
                let gp = $("#gender-print");
                let gpp = gp.parent();
                let hr = gpp.innerHeight() + $("#master-menu").innerHeight();

                gp.css({
                    left:(gpp.innerWidth()/2) - (gp.innerWidth()/2),
                    top:(hr/2) - (gp.innerHeight()/2),
                    visibility:'visible'
                });
            }
            
            $(window).on({
                resize:function(e){
                    genrePrintHook();
                }
            });
            genrePrintHook();


        });
    </script>

