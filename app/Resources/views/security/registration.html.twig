{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}
   Côte Ouest Audiovisuel  | Login
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('lib/venobox/venobox.css') }}" type="text/css" media="screen" />

    <style>
        header#header{
            height: auto !important;
            position: static;
        }
    </style>

{% endblock %}

{% block body %}
   
    <header id="header">
        {{ include('main-menu.html.twig') }}
    </header>

    <div class="container" style="margin-top:100px;margin-bottom:100px">
        <div class="row justify-content-center align-items-center" style="height:50vh">

            {% for notice in app.flashes('notice-success') %}
                <div class="col-md-6 bg-white p-4">
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i> Félicitation!</h4>
                        
                        Votre inscription à bien été enregistrée, veuillez vous rendre à boite email pour confirmer votre abonnement.

                    </div>

                    
                </div>
            {% else %}
                <div class="col-md-4 shadow bg-white p-4">
                    {{ form_start(form) }}
                        <legend>{{ 'Inscrivez-vous'|trans({},'login') }}</legend>

                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}

                        <button type="submit" class="btn btn-sm btn-primary">
                            {{ 'sign.up'|trans({},'login') }}
                        </button>
                    {{ form_end(form) }}
                </div>
            {% endfor %}

           
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('js/main-menu-manager.js','js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/venobox/venobox.min.js') }}"></script>

    <script>
        $(document).ready(function($){
            /* 09. VENOBOX JS */
            $('.venobox').venobox({
                numeratio: true,
                titleattr: 'data-title',
                titlePosition: 'top',
                spinner: 'wandering-cubes',
                spinColor: '#007bff',
                autoplay:true
            });
        });
    </script>
{% endblock %}
