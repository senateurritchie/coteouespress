{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}
   Côte Ouest Audiovisuel  | Login
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('lib/venobox/venobox.css') }}" type="text/css" media="screen" />

    {#<style>
        header#header{
            height: auto !important;
            position: static;
        }
    </style>#}

    <style>

        header #master-cover{
            height: 200px;
            background-color: #f6f6f6;
            overflow: hidden;
            background: url("{{asset('img/illustrator-banner.jpg')}}") no-repeat left top / cover;
        }

        @media (max-width: 576px) { 
            #master-cover {
                height: 258px !important;
            }
        }

    </style>

{% endblock %}

{% block body %}
   
     <header id="header">
        {{ include('main-menu.html.twig') }}
        <div id="master-cover"></div>
    </header>

    <div class="container" style="margin-top:50px;margin-bottom:100px">
        <div class="row justify-content-center align-items-center" style="height:60vh">

            {% for notice in app.flashes('notice-success') %}
                <div class="col-md-6 bg-white p-4">
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i> Félicitation!</h4>
                        
                        Votre inscription à bien été enregistrée, veuillez vous rendre à boite email pour confirmer votre abonnement.

                    </div>

                    
                </div>
            {% else %}
                <div class="col-md-4 shadow bg-white p-4">
                    {{ form_start(form) }}
                        <legend>{{ 'Inscrivez-vous'|trans({},'login') }}</legend>
                        <hr>    

                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}

                        <div class="alert alert-light p-0">
                            <small>
                                En cliquant sur S’inscrire, vous acceptez les <a href="{{ path('cgu') }}">Conditions générales d’utilisation</a>, la <a href="{{ path('privacy_policy') }}">Politique de confidentialité</a>, et la Politique relative aux cookies de {{ site.name }}.
                            </small>
                        </div>
        
                        <button type="submit" class="btn btn-sm btn-primary">
                            {{ 'sign.up'|trans({},'login') }}
                        </button>
                    {{ form_end(form) }}
                </div>
            {% endfor %}

           
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('js/main-menu-manager.js','js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/venobox/venobox.min.js') }}"></script>

    <script>
        $(document).ready(function($){
            /* 09. VENOBOX JS */
            $('.venobox').venobox({
                numeratio: true,
                titleattr: 'data-title',
                titlePosition: 'top',
                spinner: 'wandering-cubes',
                spinColor: '#007bff',
                autoplay:true
            });
        });
    </script>
{% endblock %}
