{% extends 'base.html.twig' %}

{% block title %}
   Côte Ouest Audiovisuel  | Réinitialisation du mot de passe
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>

        header #master-cover{
            height: 200px;
            background-color: #f6f6f6;
            overflow: hidden;
            background: url("{{asset('img/illustrator-banner.jpg')}}") no-repeat left top / cover;
        }

        @media (max-width: 576px) { 
            #master-cover {
                height: 258px !important;
            }
        }

    </style>

{% endblock %}

{% block body %}
   
     <header id="header">
        {{ include('main-menu.html.twig') }}
        <div id="master-cover"></div>
    </header>

    <div class="container" style="margin-top:50px;margin-bottom:100px">
        <div class="row justify-content-center align-items-center" style="height:60vh">

            {% for notice in app.flashes('notice-success') %}
                <div class="col-md-6 bg-white p-4">
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-check"></i> Félicitation!</h4>
                        
                         {{ notice }}
                    </div>
                </div>
            {% else  %}

                {% for notice in app.flashes('notice-error') %}
                    <div class="col-md-6 bg-white p-4">
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Attention!!</h4>
                             {{ notice }}
                        </div>
                    </div>
                {% else %}
                    <div class="col-md-6 shadow bg-white p-4">
                       <form method="post">
                            <legend>
                                {{ 'Réinitialisation du mot de passe'|trans({},'login') }}
                            </legend>
                            <hr> 

                            <div class="form-group">
                                <input required="required" type="email" class="form-control" name="email" placeholder="saisir votre adresse email..." />
                            </div>

                            <button type="submit" class="btn btn-sm btn-primary">
                                {{ 'Valider'|trans({},'password-reset') }}
                            </button>

                       </form>
                    </div>
                {% endfor %}
            {% endfor %}

           
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('js/main-menu-manager.js','js') }}"></script>
{% endblock %}
