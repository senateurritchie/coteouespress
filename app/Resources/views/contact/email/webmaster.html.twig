{% extends 'contact/email/base.html.twig' %}

{% block title %}
	{{mail.firstname}} {{mail.lastname}}
{% endblock %}

{% block message %}
	<h3><center>Service {{ mail.department.name|lower|title }} </center></h3>
	&nbsp;

	<p>
		Un nouveau message vous est adressé de la part d'un visiteur du site principal de Côte Ouest Audiovisuel.
	</p>

	&nbsp;


	<p>
		<table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
           	<tbody>
                <tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Objet</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.subject }}
					</td>
				</tr>

				<tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Nom</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.firstname }}
					</td>
				</tr>

				<tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Prénoms</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.lastname }}
					</td>
				</tr>

				<tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Provenance</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.referer.name }}
						<br>
						{{ mail.refererMessage }}
					</td>
				</tr>

				<tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Email</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.email }}
					</td>
				</tr>

				<tr>
                    <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px;word-break: normal">
						<strong>Message</strong>
					</td>

					<td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">
						{{ mail.message }}
					</td>
				</tr>
			<tbody>
		</table>
	</p>

	<p>&nbsp;</p>

    <br><p>L'équipe webmaster.</p>
    <p>Merci.</p>
{% endblock %}



