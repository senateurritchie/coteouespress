<?php

namespace AppBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * MovieScene
 *
 * @ORM\Table(name="movie_scene", options={"comment":"enregistre les scenes ou photo du tournage"})
 * @ORM\Entity(repositoryClass="AppBundle\Repository\MovieSceneRepository")
 */
class MovieScene
{
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
    * @var AppBundle\Entity\Movie
    *
    * @ORM\ManyToOne(targetEntity="AppBundle\Entity\Movie", inversedBy="scenes")
    * @ORM\JoinColumn(onDelete="CASCADE")
    */
    private $movie;

    /**
    * @var AppBundle\Entity\Image
    *
    * @ORM\OneToOne(targetEntity="AppBundle\Entity\Image")
    * @ORM\JoinColumn(onDelete="CASCADE")
    */
    private $image;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="create_at", type="datetime")
     */
    private $createAt;

}

